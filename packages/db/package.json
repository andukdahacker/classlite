{
  "name": "@workspace/db",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && tsc && cp -r src/generated dist/",
    "dev": "prisma generate && tsc -w && cp -r src/generated dist/",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:migrate:status": "prisma migrate status",
    "db:push": "echo '⚠️  db:push is deprecated — use db:migrate:dev for local development' && prisma db push",
    "db:seed:staging": "tsx prisma/seed-staging.ts",
    "db:seed:production": "tsx prisma/seed-production.ts",
    "db:studio": "prisma studio",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run src",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "@prisma/client-runtime-utils": "^7.1.0"
  },
  "devDependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@types/node": "^20.11.24",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "dotenv": "^17.2.3",
    "eslint": "^9.20.1",
    "prisma": "^7.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js"
    }
  }
}
