{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:full": "concurrently -k -n emu,app -c blue,green \"pnpm emu\" \"turbo dev\"",
    "emu": "firebase emulators:start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test:e2e": "pnpm --filter @workspace/e2e test",
    "test:e2e:chromium": "pnpm --filter @workspace/e2e test:chromium",
    "test:e2e:ui": "pnpm --filter @workspace/e2e test:ui",
    "test:e2e:headed": "pnpm --filter @workspace/e2e test:headed",
    "test:e2e:seed": "pnpm --filter @workspace/e2e seed",
    "test:e2e:run": "./scripts/run-e2e.sh"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "concurrently": "^9.2.1",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
