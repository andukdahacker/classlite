---
import { Button } from "@workspace/ui/components/button";
import { Globe, MessageSquare } from "lucide-react";
---

<footer class="border-t bg-background py-12">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-4 gap-8">
      <div class="space-y-4">
        <h3 class="text-lg font-semibold">IELTS Nook</h3>
        <p class="text-sm text-muted-foreground">
          The complete learning management system designed specifically
          for small and medium IELTS teaching centers.
        </p>
        <div class="flex space-x-4">
          <Button variant="ghost" size="icon">
            <Globe className="h-4 w-4" />
          </Button>
          <Button variant="ghost" size="icon">
            <MessageSquare className="h-4 w-4" />
          </Button>
        </div>
      </div>

      <div class="space-y-4">
        <h4 class="font-semibold">Product</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li>
            <a
              href="#features"
              class="hover:text-primary transition-colors"
            >
              Features
            </a>
          </li>
          <li>
            <a
              href="#pricing"
              class="hover:text-primary transition-colors"
            >
              Pricing
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              API
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              Integrations
            </a>
          </li>
        </ul>
      </div>

      <div class="space-y-4">
        <h4 class="font-semibold">Support</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              Documentation
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              Help Center
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              Contact Us
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              Status
            </a>
          </li>
        </ul>
      </div>

      <div class="space-y-4">
        <h4 class="font-semibold">Company</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              About
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              Blog
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              Careers
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary transition-colors">
              Privacy
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t mt-8 pt-8 text-center text-sm text-muted-foreground">
      <p>&copy; 2024 IELTS Nook. All rights reserved.</p>
    </div>
  </div>
</footer>
