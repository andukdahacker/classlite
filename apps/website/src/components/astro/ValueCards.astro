---
const cards = [
  {
    icon: "timer",
    title: "Grade in minutes, not hours",
    description: "AI drafts feedback, you approve.",
  },
  {
    icon: "heart-pulse",
    title: "Know who needs help",
    description: "See student health at a glance.",
  },
  {
    icon: "calendar-check",
    title: "Schedule without the mess",
    description: "Classes, rooms, teachers â€” no spreadsheets.",
  },
];
---

<section class="relative px-6 py-24 md:py-32">
  <!-- Subtle tinted background -->
  <div class="absolute inset-0 bg-secondary/30" aria-hidden="true"></div>

  <div class="relative mx-auto max-w-6xl">
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        cards.map((card, i) => (
          <div
            data-reveal
            data-delay={String(i + 1)}
            class="group rounded-2xl border border-border/50 bg-card p-8 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:border-primary/20 hover-card"
          >
            {/* Icon container with golden accent */}
            <div class="mb-5 flex h-12 w-12 items-center justify-center rounded-xl transition-colors duration-300" style="background: oklch(0.762 0.174 74.34 / 0.12);">
              {card.icon === "timer" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-primary"
                >
                  <line x1="10" x2="14" y1="2" y2="2" />
                  <line x1="12" x2="12" y1="2" y2="6" />
                  <circle cx="12" cy="14" r="8" />
                  <line x1="12" x2="12" y1="10" y2="14" />
                  <line x1="12" x2="15" y1="14" y2="14" />
                </svg>
              )}
              {card.icon === "heart-pulse" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-primary"
                >
                  <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z" />
                  <path d="M3.22 12H9.5l.5-1 2 4.5 2-7 1.5 3.5h5.27" />
                </svg>
              )}
              {card.icon === "calendar-check" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-primary"
                >
                  <path d="M8 2v4" />
                  <path d="M16 2v4" />
                  <rect width="18" height="18" x="3" y="4" rx="2" />
                  <path d="M3 10h18" />
                  <path d="m9 16 2 2 4-4" />
                </svg>
              )}
            </div>
            <h3 class="font-heading mb-2 text-lg font-semibold tracking-tight text-foreground">
              {card.title}
            </h3>
            <p class="text-sm leading-relaxed text-muted-foreground">
              {card.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
